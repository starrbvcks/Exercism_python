#Day1
"""written 2 consonants"""
EXPECTED_BAKE_TIME = 40 
PREPARATION_TIME = 2 

def bake_time_remaining(elapsed_time):
    """created a function to calculate bake time remaining"""
    return EXPECTED_BAKE_TIME - elapsed_time #return remaining time

def preparation_time_in_minutes(number_of_layers):
    """created a function to calculate time after adding layers"""
    return number_of_layers*PREPARATION_TIME #return each layer*2 minutes


def elapsed_time_in_minutes(number_of_layers,elapsed_time):
    """a function to calculate the total time"""
    return number_of_layers*2+elapsed_time #return total time
